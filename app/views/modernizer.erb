<html>
    <head>
        <style>
            body { font-family: monospace; }
        </style>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0" />
        <script type="text/javascript" src="/vendor/modernizr.custom.99985.js"></script>
    </head>
    <body>
        <div id="console"></div>
        <script type="text/javascript">

            var log = function() {

                document.getElementById('console').innerHTML = '';
                
                var print = function(html) {
                    document.getElementById('console').innerHTML += html;
                }

                var support = [
                  'Modernizr.fontface',
                  'Modernizr.audio', 
                  'Modernizr.video',
                  'Modernizr.history',
                  'Modernizr.svg',
                  'Modernizr.canvas',
                  'Modernizr.geolocation',
                  'Modernizr.localstorage',
                  'Modernizr.indexeddb',
                  'Modernizr.touch',
                  'Modernizr.webgl',
                  'Modernizr.cssanimations',
                  'window.innerWidth',
                  'window.innerHeight',
                  'screen.width',
                  'screen.height',
                  'window.devicePixelRatio',
                  'navigator.battery',
                  'screen.colorDepth',
                  'navigator.language',
                  'window.performance',
                  'window.msPerformance',
                  'window.webkitPerformance',
                  'window.mozPerformance',
                  'window.orientation'
                ].map(function(test){
                        return [ test, eval(test) ]
                        });

                // log test results on the server
                var queryString = support.map(function(test){
                        return test.join(':')
                        }).join(',')

                print('<img src="/log?support=' + encodeURI(queryString) + '&' + Math.random(10000000) + '"/>');

                // display test results on client
                support.forEach(function(test){
                    print('<li>' + test[0] + ' - ' + test[1]);
                    });
                }

            // ... 
            log();
            
            window.onorientationchange = log 

        </script>
    </body>
</html>

